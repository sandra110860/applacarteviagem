FloatLayout:
   canvas:
      Color:
         rgb: utils.get_color_from_hex("#001824")
      Rectangle:
         size: self.size
         pos: self.pos
   Image:
      pos_hint: {"right": 1 , "top":0.95}
      size_hint: 1, 0.25
      source: "icones/icon.png"
      id: foto_perfil
   ScreenManager:
      pos_hint: {"right": 1 , "top": 0.7}
      size_hint: 1, 0.7
      id: screen_manager
      LoginPage:
         name: "loginpage"
         id: loginpage
      HomePage:
         name: "homepage"
         id: homepage
      AjustesPage:
