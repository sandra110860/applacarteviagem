         id: ajustespage
      AdicionarRoteiroPage:
         name: "adicionarroteiropage"
         id: adicionarroteiropage
      ListaClientesPage:
         name: "listaclientespage"
         id: listaclientespage
      FotoPerfilPage:
         name: "fotoperfilpage"
         id: fotoperfilpage
      AdicionarClientePage:
         name: "adicionarclientepage"
         id: adicionarclientepage
      ListaVendasPage:
         name: "listavendaspage"
