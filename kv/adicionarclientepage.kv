<AdicionarClientePage>:
   FloatLayout:
      canvas:
         Color:
            rgb: utils.get_color_from_hex("#9DC3E6")
         Rectangle:
            size: self.size
            pos: self.pos
            source:"icones/bg1.png"
      Label:
         pos_hint:{"right": 0.9 ,"top": 0.8}
         size_hint: 0.8, 0.1
         bold: True
         markup: True
         text: "Insira o [color=#ED7A2B]ID do membro de equipe[/color] da sua viagem"
      LabelButton:
         canvas.before:
            Rectangle:
               size: self.size
               pos: self.pos
               source: "icones/botaolaranja.png" if self.state == "normal" else "icones/botaolaranjaapertado.png"
         pos_hint:{"right": 0.9 ,"top": 0.55}
         size_hint: 0.8, 0.2
         on_release:app.adicionar_vendedor(input_id_outrovendedor.text)
         text: "Adicionar Membro de Equipe"
      TextInput:
         pos_hint:{"right": 0.9 ,"top": 0.7}
         size_hint: 0.8, 0.1
         id: input_id_outrovendedor
      Label:
         pos_hint:{"right": 0.9 ,"top": 0.3}
         size_hint: 0.8, 0.1
         bold: True
         markup: True
         text: ""
         id: mensagem_outrovendedor
      # botao de voltar
      FloatLayout:
         pos_hint:{"right": 1 ,"top": 0.12}
         size_hint: 1, 0.12
         canvas:
            Color:
               rgb: utils.get_color_from_hex("#ED7A2B")
            Rectangle:
               size: self.size
               pos: self.pos
         ImageButton:
            pos_hint:{"right": 0.2 ,"top": 0.9}
            size_hint: 0.2, 0.8
            source: "icones/voltar.png"
            on_release: app.mudar_tela("ajustespage")
