<HomePage>:
   FloatLayout:
      canvas:
         Color:
            rgb: utils.get_color_from_hex("#FFC819")
         Rectangle:
            size: self.size
            pos: self.pos
            source:"icones/bg1.png"
      Label:
         canvas.before:
            Rectangle:
               size: self.size
               pos: self.pos
               source: "icones/botaolaranjafino.jpg"
         pos_hint:{"right": 0.85 ,"top": 0.95}
         size_hint: 0.7, 0.2
         text: "Valor Total dos Roteiros: R$"
         id: label_total_vendas
         markup: True
      # lista de vendas
      ScrollView:
         pos_hint:{"right": 1 ,"top": 0.75}
         size_hint: 1, 0.63
         GridLayout:
            cols: 1
            id: lista_vendas
            size_hint_y: None
            spacing: 2, 2
            height: self.minimum_height
            row_default_height: "90dp"
            row_force_default: True
      # 3 botoes da homepage
      GridLayout:
         rows: 1
         pos_hint:{"right": 1 ,"top": 0.12}
         size_hint: 1, 0.12
         canvas:
            Color:
               rgb: utils.get_color_from_hex("#ED7A2B")
            Rectangle:
               size: self.size
               pos: self.pos
         ImageButton:
            source: "icones/add.png"
            on_release: app.mudar_tela("adicionarroteiropage")
         ImageButton:
            source: "icones/adicionar_vendedor.png"
            on_release: app.mudar_tela("listaclientespage")
         ImageButton:
            source: "icones/settings.png"
            on_release: app.mudar_tela("ajustespage")